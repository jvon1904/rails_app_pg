<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= will_paginate @comments %>
<div style="display:flex;flex-direction:row;align-items:flex-start">
<% @comments.each do |c| %>
  <%= render partial: "comments/comment", locals: {stupid: c, post: @post} %>
<% end %>
</div>
<%= will_paginate @comments %>


<%= link_to 'Edit', edit_post_path(@post) %> |
