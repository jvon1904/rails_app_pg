<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Comments:</strong>
  <ul>
    <% @comments.each do |c| %>
      <%= link_to comment_path(c) do %>
        <li><b><%= c.name %></b>: <%= c.body %></li>
      <% end %>
    <% end %>
  </ul>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Add Comment', new_comment_path %> |
<%= link_to 'Back', posts_path %>
